<h3>予約済みルーム一覧</h3>

<table>
<thead>
  <tr>
    <th>id</th>
    <th>ルーム画像</th>
    <th>ルーム名</th>
    <th>ルーム紹介</th>
    <th>合計料金</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>予約確定日時</th>
  </tr>
</thead>

<tbody>
    <tr>
    <% @rooms.each do |room| %>
    <td><%= room.id %></td>
    <td><image src="<%= room.img %>"></td>
    <td><%= room.name %></td>
    <td><%= room.introduction %></td>
    <td><%= room.fee %></td>
    <% end %>

    <% @reservations.each do |reservation| %>
    <td><%= reservation.start_date %></td>
    <td><%= reservation.end_date %></td>
    <td><%= reservation.created_at %></td>
    <% end %>
    </tr>
</tbody>
</table>