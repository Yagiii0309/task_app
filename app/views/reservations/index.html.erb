<h3>予約済みルーム一覧</h3>

<table>
<thead>
  <tr>
    <th>id</th>
    <th>ルーム画像</th>
    <th>ルーム名</th>
    <th>ルーム紹介</th>
    <th>合計料金</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>予約確定日時</th>
  </tr>
</thead>

<tbody>
  <% @reservations.each do |reservation| %>
    <tr>
    <td><%= reservation.user_id %></td>
    <td><%= reservation.room_img %></td>
    <td><%= reservation.room_name %></td>
    <td><%= reservation.room_introduction %></td>
    <td><%= reservation.room_fee.to_i * reservation.people.to_i * (reservation.end_date - reservation.start_date).to_i %></td>
    <td><%= reservation.start_date %></td>
    <td><%= reservation.end_date %></td>
    <td><%= reservation.created_at %></td>
    <% end %>
    </tr>
</tbody>
</table>