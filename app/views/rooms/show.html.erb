<h3>¥ / 日</h3>
 
    <table>
    <%= form_with model: @post do |f| %>
      <tr><td><%= @room.img %></td></tr>
      <tr><td><%= @room.name %></td></tr>
      <tr><td><%= @room.introduction %></td></tr>
      
      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <th><%= f.label :people ,"人数" %></th>
        <td><%= f.number_field :people %></td>
      </tr>
    </table>
    <%= f.hidden_field :room_id, value: @room.id %>
    
    <div>
      <ul>
        <li><%= f.submit "予約する"%></li>
      </ul>
    </div>
    <% end %>