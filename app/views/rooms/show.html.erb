<h3>¥ / 日</h3>
 
    <table>
    <%= form_with model: @reservation do |f| %>
      <tr>
      <th><%= f.label :room_img ,"ルーム画像" %></th>
      <td><%= f.text_field :room_img, readonly: true, value: @room.img %></td>
      </tr>

      <tr>
      <th><%= f.label :room_name ,"ルーム名" %></th>
      <td><%= f.text_field :room_name, readonly: true, value: @room.name %></td>
      </tr>

      <tr>
      <th><%= f.label :room_introduction ,"ルーム紹介" %></th>
      <td><%= f.text_field :room_introduction, readonly: true, value: @room.introduction %></td>
      </tr>
      
      <tr>
        <th><%= f.label :room_fee ,"ルーム料金" %></th>
        <td><%= f.text_field :room_fee, readonly: true, value: @room.fee  %></td>
      </tr>

      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>

      <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>

      <tr>
        <th><%= f.label :people ,"人数" %></th>
        <td><%= f.number_field :people %></td>
      </tr>

    </table>
    
    <div>
      <ul>
        <li><%= f.submit "予約する"%></li>
      </ul>
    </div>
    <% end %>